<!doctype html>
<html lang="en">

<head>
	<meta charset="utf-8" />
	<title>ranking</title>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<script type="text/javascript" src="public/index.js"></script>
	
	<link href="/index.css" rel="stylesheet" type="text/css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
	
</head>

<body>
	<div class="container-fluid">
	<div id="head">
		
		
			<img src="ravensimage.png" alt="ravensimage" id="ravensImgD">
            <button type="submit" style="color: transparent; background-color: transparent; border-color: transparent; cursor: default;"><i class="fa fa-times" aria-hidden="true" id="rankingX" onclick="history.back()"></i></button>
		
	</div>

	<div id="main" class="autocomplete">
		<h1 id="rank">STATISTICS</h1><br>
		<%- stats %>
		<h3 id="newHeader">New Player In</h3>
		<h3 name="newPlayer" id="newPlayer"></h3>

	</div>
	</div>
	<form name="returnHome" action="/" method="GET">

	</form>

	<script>
	
		function time() {
		let date = new Date();
		let hour = date.getHours();
		let minute = date.getMinutes();
		let second = date.getSeconds();
		document.getElementById("newPlayer").innerHTML = `${(23 - hour).toString().padStart(2,0)}:${(60 - minute).toString().padStart(2,0)}:${(60 - second).toString().padStart(2,0)}`;
		setInterval(time,1000);
		}
		time();
   		
		function validate(){
			let date = new Date();
			let hour = date.getHours();
			let min = date.getMinutes();
			

			if (hour == 0 && min == 0){
				document.returnHome.submit();
			}			
		}
		setInterval(validate,5000);</script>

</body>

</html>